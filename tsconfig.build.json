{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "strict": true,
    "types": ["node"],
    "paths": {
      "@config/*": ["config/*"],
      "@db/*": ["db/*"],
      "@models/*": ["models/*"],
      "@repositories/*": ["repositories/*"],
      "@usecases/*": ["usecases/*"],
      "@services/*": ["services/*"],
      "@middleware/*": ["middleware/*"],
      "@handlers/*": ["handlers/*"],
      "@providers/*": ["providers/*"],
      "@managers/*": ["managers/*"],
      "@deliverymen/*": ["deliverymen/*"],
      "@validation/*": ["validation/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/__tests__/**",
    "jest.config.ts",
    "**/__mocks__/**"
  ]
}
